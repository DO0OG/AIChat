<Window x:Class="AIChat_Project.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="서버 주소를 입력하세요:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox x:Name="UrlTextBox" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="250" Height="30" Margin="0,0,0,10"/>
            <Button Content="Save" Width="100" Height="30" Click="SaveButton_Click"/>
            <ProgressBar x:Name="LoadingProgressBar" IsIndeterminate="True" Visibility="Collapsed" Width="250" Height="2011" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
